{
  "name": "html-in-js-somenoe-fork",
  "displayName": "HTML in JS (somenoe's fork)",
  "publisher": "somenoe",
  "description": "A simple VSCode extension that adds HTML highlighting inside JS template literals",
  "version": "1.0.6",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "author": "somenoe",
  "license": "MIT",
  "homepage": "https://github.com/somenoe/html-in-js#readme",
  "bugs": {
    "url": "https://github.com/somenoe/html-in-js/issues"
  },
  "keywords": [
    "html",
    "javascript",
    "template-literals",
    "syntax-highlighting",
    "emmet"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/somenoe/html-in-js.git"
  },
  "contributes": {
    "configuration": {
      "title": "HTML in JS",
      "properties": {
        "htmlInJs.commentPattern": {
          "type": "string",
          "default": "html",
          "markdownDescription": "Pattern to match in comments before template literals. Can be a string or regex pattern. Examples: `html`, `HTML`, `html|HTML` (for case-insensitive matching)",
          "order": 1
        }
      }
    },
    "grammars": [
      {
        "path": "./syntaxes/html-in-js.tmLanguage.json",
        "scopeName": "inline.html.js",
        "injectTo": [
          "source.js"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.html": "html",
          "source.css": "css",
          "source.js": "javascript"
        }
      },
      {
        "path": "./syntaxes/html-script-injection.tmLanguage.json",
        "scopeName": "inline.html.script.injection",
        "injectTo": [
          "text.html.basic",
          "text.html.derivative",
          "text.html"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.html": "html",
          "source.js": "javascript",
          "source.css": "css"
        }
      }
    ],
    "languages": [
      {
        "id": "html-in-js",
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "emmet.includeLanguages": {
        "javascript": "html"
      },
      "emmet.showExpandedAbbreviation": "always",
      "emmet.triggerExpansionOnTab": true,
      "emmet.showSuggestionsAsSnippets": true,
      "emmet.showAbbreviationSuggestions": true,
      "[javascript]": {
        "editor.suggest.showWords": false,
        "editor.suggest.showSnippets": true,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        }
      },
      "emmet.syntaxProfiles": {
        "javascript": {
          "filters": "html",
          "self_closing_tag": false
        }
      },
      "emmet.preferences": {
        "html.tag_case": "lower",
        "html.attr_case": "lower",
        "html.attr_quotes": "double",
        "html.self_closing_tag": false
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pack": "vsce package",
    "format": "prettier --config prettier.config.mts --log-level warn --write .",
    "lint": "bun run format && eslint src"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "prettier": "^3.0.0",
    "typescript": "^4.9.4",
    "typescript-eslint": "^8.54.0"
  }
}
